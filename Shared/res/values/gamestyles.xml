<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleFont" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">@dimen/titleFont</item>
        <item name="android:paddingTop">@dimen/titlePaddingTopBottom</item>
        <item name="android:paddingBottom">@dimen/titlePaddingTopBottom</item>
    </style>

    <style name="ListViewFont" parent="@android:style/TextAppearance.DeviceDefault.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GameButton" parent="@android:style/Widget.Button">
        <item name="android:padding">10dip</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <style name="GameButtonBlack" parent="@android:style/Widget.Button">
        <item name="android:padding">10dip</item>
        <item name="android:background">@drawable/blackbutton</item>
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <style name="MainMenuSmallerButton" parent="@style/GameButton">
        <item name="android:textSize">@dimen/mainMenuSmallButtonText</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainMenuLargerButton" parent="@style/GameButton">
        <item name="android:textSize">@dimen/mainMenuLargeButtonText</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="popupStyle" parent="@style/GameButton">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="popupTitleText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/popupTitle</item>
    </style>

    <style name="popupTitleTextLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/popupTitle</item>
    </style>

    <style name="Theme.CrazyEights" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.CrazyEights.Dialog" parent="@android:style/Theme.DeviceDefault.Dialog.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>